<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><% if (isLoggedIn) {%>Profile<% } else {%>Login<% } %> | Badger Parts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/stylesheets/fontawesome.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/header.css" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
  </head>

  <body>
    <%- include('header', {totalItemsInCart: totalItemsInCart, categories: categories, activeCategoryName: "", page: "profile"}) %>
    <div>
        <div class="container cart__details">
            <div class="container">
                <% if (isLoggedIn) {%>
                    <h1 class="page-heading page-heading_h1 page-heading_m-h1">Profile</h1>
                <% } else {%>
                    <h1 class="page-heading page-heading_h1 page-heading_m-h1">Login</h1>
                <% } %>
                <div class="row">
                    <div class="col col-lg-10  offset-md-1">
                        <div class="card">
                            <div class="card-body p-4">
                                <div class="flexbox">
                                    <div class="tab-content col-lg-12 column" id="v-pills-tabContent">
                                        <div>
                                            <span style="color:red;"><b><%= exceptionMessage %></b></span>
                                            <% if (isLoggedIn) {%>
                                                <div class="align-content-center d-flex mt-4">
                                                    <div class="profile-img-container">
                                                        <img src="/assets/images/profile.png" alt="profile" />
                                                    </div>
                                                    <div class="ms-5">
                                                        <div class="row fs-6">
                                                            <div class="col-3 mb-2">
                                                                <label class="form-label">Display Name:</label>
                                                            </div>
                                                            <div class="col-9 mb-2">
                                                                <%= profileData.displayName %>
                                                            </div>
                                                            <div class="col-3 mb-2">
                                                                <label class="form-label">User Name:</label>
                                                            </div>
                                                            <div class="col-9 mb-2">
                                                                <%= profileData.userName %>
                                                            </div>
                                                            <div class="col-3 mb-2">
                                                                <label class="form-label">User ID:</label>
                                                            </div>
                                                            <div class="col-9 mb-2">
                                                                <%= profileData.userId %>
                                                            </div>
                                                            <div class="col-3">
                                                                <label class="form-label">Org ID:</label>
                                                            </div>
                                                            <div class="col-9">
                                                                <%= profileData.orgId %>
                                                            </div>
                                                        </div>
                                                        <hr class="product-page__hr">
                                                        <div class="row fs-6">
                                                            <div class="col-3 mb-2">
                                                                <label class="form-label">Last login:</label>
                                                            </div>
                                                            <div class="col-9 mb-2">
                                                                <%= issuedAt || 'Not logged in' %>
                                                            </div>
                                                            <div class="col-3 mb-2">
                                                                <label class="form-label">Salesforce Org:</label>
                                                            </div>
                                                            <div class="col-9 mb-2">
                                                                <%= instanceUrl %>
                                                            </div>
                                                        </div>
                                                        <div class="text-end mt-4">
                                                            <a class="btn btn-secondary" href="/logout"> Logout </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            <%} else {%>
                                                <div class="row">
                                                    <div class="col">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div class="text-start content-item">Salesforce Org: <%= instanceUrl %></div>
                                                            <a class="btn btn-primary" role="button" href="/login/direct">Login to Salesforce</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <%- include('footer') %>
      
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

   
  </body>
</html>